<% // create a list of javascript files to have the header load %>
<% var js_include = ['create_vehicle.js']; %>
<% include header %>

<!-- Note that this is a post -->
<form id="create_vehicle_form" action="<%= action %>">
    <table id="login">
        <tr><td>Make:</td>
            <td><input type="text" id="Make" name="Make" /></td>
        </tr>
        <tr><td>Model:</td>
            <td><input type="text" id="Model" name="Model" /></td>
        </tr>
        <tr><td>Year:</td>
            <td><input type="text" id="YEAR" name="YEAR" /></td>
        </tr>
        <tr><td>Price:</td>
            <td><input type="text" id="PRICE" name="PRICE" /></td>
        </tr>
    </table>
    <!-- not that we use a button here and not submit -->
    <input type="button" id="createVehicleBtn" value="Create" />
</form>

<div id="output" style="margin:10px;display:none"></div>

<% include footer %>